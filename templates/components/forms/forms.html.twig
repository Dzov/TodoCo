{% block form_row %}
    <div class="form-group">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>
{% endblock %}

{% block text_widget %}
    <input class="form-control" {{ form.vars.required ? 'required' }} id="{{ form.vars.id }}"{% if value is not empty %}value="{{ value }}" {% endif %} name="{{ form.vars.full_name }}"/>
{% endblock %}

{% block password_widget %}
    {{ block('text_widget') }}
{% endblock %}

{% block email_widget %}
    {{ block('text_widget') }}
{% endblock %}

{% block textarea_widget %}
    {{ block('text_widget') }}
{% endblock %}

{% block form_errors %}
    {% if errors|length > 0 %}
        {% if compound %}
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% else %}
            <ul>
                {% for error in errors %}
                    <div class="alert-danger" role="alert">
                        <li class="px-3 py-2">{{ error.message }}</li>
                    </div>
                {% endfor %}
            </ul>
        {% endif %}
    {% endif %}
{% endblock %}

{% block login_form %}
    <form action="{{ path('login_check') }}" method="post" class="custom-form login-form">
        <div class="form-group">
            <label for="username">Nom d'utilisateur ou email:</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" aria-describedby="loginDetailsHelp" placeholder="johndoe@example.com"/>
            <small id="loginDetailsHelp" class="form-text text-muted">Nous ne partagererons jamais votre email.</small>
        </div>
        <div class="form-group">
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" name="_password" class="form-control" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-success">Se connecter</button>
    </form>
{% endblock %}
