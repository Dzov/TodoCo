{% extends 'base.html.twig' %}

{% block header_title %}<h1>Modifier <strong>{{ user.username }}</strong></h1>{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
    <div class="row custom-form mt-md-4">
        {{ form_start(form, {'action' : path('edit_user', {'userId' : user.id}) , 'attr': {'class': 'd-flex flex-column custom-form'}}) }}
        <div class="form-group">
            {% if form_errors(form.username) is not empty %}
                <div class="alert-danger" role="alert">
                    {{ form_errors(form.username) }}
                </div>
            {% endif %}
            {{ form_label(form.username) }}
            {{ form_widget(form.username) }}
        </div>
        <div class="form-group">
            {% if form_errors(form.password) is not empty %}
                <div class="alert-danger" role="alert">
                    {{ form_errors(form.password) }}
                </div>
            {% endif %}
            {{ form_widget(form.password) }}
        </div>
        <div class="form-group">
            {% if form_errors(form.email) is not empty %}
                <div class="alert-danger" role="alert">
                    {{ form_errors(form.email) }}
                </div>
            {% endif %}
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>

        <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
