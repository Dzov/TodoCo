{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex justify-content-between">
        <h1 class="page-title">Liste des utilisateurs</h1>
        <a href="{{ path('create_user') }}" class="btn btn-primary-open mt-4 align-self-center d-flex"><i class="fa fa-plus button-icon"></i>Ajouter un utilisateur</a>
    </div>
    {% if users|length == 0 %}
        <div class="alert alert-warning action-alert" role="alert">
            <span>Il n'y a pas encore d'utilisateur enregistrÃ©.</span>
            <a href="{{ path('create_user') }}" class="btn btn-warning d-flex"><i class="fa fa-plus button-icon"></i>Ajouter un utilisateur</a>
        </div>
    {% else %}
        <div class="row">
            <table class="table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Nom d'utilisateur</th>
                    <th>Adresse d'utilisateur</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            <a href="{{ path('edit_user', {'userId' : user.id}) }}" class="btn btn-primary ">
                                <i class="fa fa-pencil button-icon"></i>
                                Modifier
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
