<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <div class="caption">
            <h4 class="pull-right">
                {% if task.isDone %}<span class="glyphicon glyphicon-ok"></span>{% else %}
                    <span class="glyphicon glyphicon-remove"></span>{% endif %}
            </h4>
            <h4><a href="{{ path('edit_task', {'taskId' : task.id }) }}">{{ task.title }}</a></h4>
            <p>{{ task.content }}</p>
            <p>Créé par {{ task.author.username }}</p>
            <div class="d-flex justify-content-end mb-4">
                <form action="{{ path('toggle_task', {'taskId' : task.id }) }}">
                    <button class="btn btn-success btn-sm pull-right">
                        {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                    </button>
                </form>
                {% if is_granted('CAN_USER_DELETE_TASK') %}
                    <form action="{{ path('delete_task', {'taskId' : task.id }) }}">
                        <button class="btn btn-danger btn-sm pull-right">Supprimer</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>
