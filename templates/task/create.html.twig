{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ajouter une tâche</h1>
    <div class="row custom-form mt-md-5">
        {{ form_start(form, {'action' : path('create_task'), 'attr': {'class': 'd-flex flex-column custom-form'}}) }}
        <div class="form-group">
            {% if form_errors(form.title) is not empty %}
                <div class="alert-danger" role="alert">
                    {{ form_errors(form.title) }}
                </div>
            {% endif %}
            {{ form_label(form.title) }}
            {{ form_widget(form.title) }}
        </div>
        <div class="form-group">
            {% if form_errors(form.content) is not empty %}
                <div class="alert-danger" role="alert">
                    {{ form_errors(form.content) }}
                </div>
            {% endif %}
            {{ form_label(form.content) }}
            {{ form_widget(form.content) }}
        </div>

        <button type="submit" class="btn btn-success pull-right">Ajouter</button>
        {{ form_end(form) }}

    </div>
    <a href="{{ path('list_tasks') }}" class="btn btn-primary mt-4">Retour à la liste des tâches</a>
{% endblock %}
